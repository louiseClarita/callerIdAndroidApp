<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="125dp"
                android:text="Enter Contact details:"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_gravity="center"

                android:id="@+id/progressBar12"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="horizontal"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_grey"
                    android:orientation="vertical">

                    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/bottomsheetWannabe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:orientation="horizontal" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:id="@+id/framCreateContact2"

                        android:orientation="horizontal"
                        app:cardBackgroundColor="@color/grey">

                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/transparent"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="First name*:"
                                android:textSize="17dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Last name*:"
                                android:textSize="17dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Company*:"
                                android:textSize="17dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Job title*:"
                                android:textSize="17dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text=" Email:"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="4dp"
                                android:text=" Phone Number :"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:background="@drawable/transparent"
                            android:gravity="left"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/cr_firstname2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@color/white"
                                android:backgroundTintMode="add"
                                android:gravity="top"
                                android:layout_marginRight="10dp"
                                android:inputType="text"

                                android:textAlignment="gravity" />

                            <EditText
                                android:id="@+id/cr_lastname2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:backgroundTintMode="add"
                                android:gravity="top"
                                android:layout_marginRight="10dp"
                                android:inputType="text"
                                android:textAlignment="gravity"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/cr_company2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="9dp"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:backgroundTintMode="add"
                                android:gravity="top"

                                android:inputType="text"
                                android:textAlignment="gravity"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/cr_job2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"

                                android:layout_marginTop="9dp"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:backgroundTintMode="add"
                                android:gravity="top"

                                android:inputType="text"
                                android:textAlignment="gravity"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/cr_email2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"

                                android:layout_marginTop="9dp"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:backgroundTintMode="add"
                                android:gravity="top"

                                android:inputType="textEmailAddress"
                                android:textAlignment="gravity"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/cr_phonenbre2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:background="@color/grey"
                                android:backgroundTint="@color/grey"
                                android:backgroundTintMode="add"
                                android:gravity="top"
                                android:layout_marginRight="10dp"
                                android:inputType="number"
                                android:textAlignment="gravity"
                                android:textColor="@color/black" />


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/createStatus2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/logscardView"
                        android:background="@drawable/transparent"
                        android:text="status"
                        android:visibility="gone"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                         />
                    <TextView
                        android:id="@+id/logsStatus1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/logscardView"
                        android:background="@drawable/transparent"
                        android:text="status"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textColor="@color/red"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/createContact2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:backgroundTint="@color/lightblue"
                            android:text="Save" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorAccent"

                            android:text="Cancel" />

                        <Button
                            android:id="@+id/gotoSaveLogs2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:backgroundTint="@color/colorAccent"
                            android:text="save this phone call into logs"
                             />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
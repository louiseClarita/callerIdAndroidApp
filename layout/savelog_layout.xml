<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="125dp"
            android:text="Enter Phone call details:"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/logscardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="585dp"
                android:background="@drawable/gradient_grey"
                android:orientation="vertical">

                <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bottomsheetWannabe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:orientation="horizontal" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveLogsProgress"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:id="@+id/SaveLogsPage"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/grey">

                    <LinearLayout
                        android:layout_width="100dp"

                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/transparent"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone number:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date and time:" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration:" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*Subject:" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description:" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:background="@drawable/transparent"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/phNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="71753991" />

                        <TextView
                            android:id="@+id/ctct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="charbel mattar" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="dateandtime:" />

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="duration:" />

                        <EditText
                            android:id="@+id/subject"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/customborder"
                            android:backgroundTint="#FFFFFF"
                            android:backgroundTintMode="add"
                            android:gravity="top"

                            android:inputType="text"
                            android:lines="1"
                            android:padding="0in"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/customborder"
                            android:backgroundTint="#FFFFFF"
                            android:backgroundTintMode="add"
                            android:gravity="top"
                            android:hint="enter the description of the call"
                            android:inputType="textMultiLine"
                            android:minLines="7"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="15dp" />


                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/logsStatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:background="@drawable/transparent"
                    android:text="status"

                    android:textAlignment="center"
                    android:textColor="@color/red" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/savephonecall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/lightblue"
                        android:text="Save" />

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorAccent"

                        android:text="Cancel" />
                </LinearLayout>

                <TextView
                    android:id="@+id/logsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/logscardView"
                    android:background="@drawable/transparent"
                    android:text="status"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:background="@drawable/transparent"
            android:text="status"

            android:textAlignment="center"
            android:textColor="@color/red" />

    </LinearLayout>
</RelativeLayout>